{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "dom"],
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "core-js",
      "node",
      "jquery",
      "select2"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}